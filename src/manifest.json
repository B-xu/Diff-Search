{
    "name": "Pull Request Search",
    "description": "A search tool that works inside Github/Bitbucket pull requests",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {"matches":["<all_urls>"],
        "js":["scripts/content.js"]}
    ],
    "browser_action":{
        "default_popup": "popup/popup.html",
        "default_title": "test popup"
    }
}